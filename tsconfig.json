{
  "compilerOptions": {
    "target": "esnext",                       
    "module": "commonjs",                     
    "rootDir": "./",                          
    "outDir": "dist",                         
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true,
    "strict": true,                           
    "skipLibCheck": true,                     
    "resolveJsonModule": true,                
    "moduleResolution": "node",
    "types": ["node"]                         
  },
  "include": ["src/**/*.ts", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
